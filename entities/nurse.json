{
  "format_version": "1.19.0",
  "minecraft:entity": {
    "description": {
      "identifier": "mod12:nurse",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "scripts": {
        "animate": [
          "scp002"
        ]
      },
      "animations": {
          "scp002": "controller.animation.player.scp002"
      }
    },
    "component_groups": {
      "become_zombie": {
        "minecraft:transformation": {
          "into": "minecraft:zombie"
        }
      },
      "minecraft:base_nurse1": {
        "minecraft:variant": {
          "value": 0
        }
      },
      "minecraft:base_nurse2": {
        "minecraft:variant": {
          "value": 1
        }
      },
      "minecraft:base_nurse3": {
        "minecraft:variant": {
          "value": 2
        }
      }
    },

    "components": {
      "minecraft:mob_effect": {
        "effect_range": 0.5,
        "mob_effect": "regeneration",
        "effect_time": 3,
        "entity_filter": {
          "any_of": [
            { "test": "is_family", "subject": "other", "value": "player" },
            { "test": "is_family", "subject": "other", "value": "scpfoundation" },
            { "test": "is_family", "subject": "other", "value": "guard" },
            { "test": "is_family", "subject": "other", "value": "mtf" },
            { "test": "is_family", "subject": "other", "value": "villager" },
            { "test": "is_family", "subject": "other", "value": "iron_golem" },
            { "test": "is_family", "subject": "other", "value": "wandering_trader" },
            { "test": "is_family", "subject": "other", "value": "trader_llama" }
          ] 
        }
      },
      "minecraft:economy_trade_table": {
        "display_name": "Nurse",
        "table": "trading/economy_trades/nurse.json",
        "new_screen": true,
        "persist_trades": true
      },
      "minecraft:behavior.send_event": {
        "priority": 0,
        "event_choices": [
          {
            "min_activation_range": 0.0,
            "max_activation_range": 2.0,
            "cooldown_time": 2.0,
            "cast_duration": 0.1,
            "particle_color": "#FFB38033",
            "weight": 3,
            "filters": { 
                "all_of": [
                  { "test" :  "is_family", "subject" : "other", "value" :  "corridor_door"}
                ] 
            },
            "start_sound_event": "cast.spell",
            "sequence": [
              {
                "base_delay": 0.1,
                "event": "become_zombie",
                "sound_event": "prepare.wololo"
              }
            ]
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "any_of": [
                  {"test": "is_family", "subject": "other", "value": "zombie"},
                  {"test": "is_family", "subject": "other", "value": "husk"},
                  {"test": "is_family", "subject": "other", "value": "scp049"}
                ],
                "all_of": [
                  {"test": "has_damage", "value": "fatal"}
                ]
              },
              "event": "become_zombie"
            }
          }
        ]
      },
      "minecraft:health": {
        "value": 20,
		    "max": 20
      },
      "minecraft:type_family": {
        "family": [ "nurse", "human", "scpfoundation", "mob" ]
      },
      "minecraft:attack": {
        "damage": 1
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 3
      },
      "minecraft:behavior.avoid_mob_type": {
        "priority": -1,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                { "test" :  "has_tag", "subject" : "other", "value" :  "scp"},
                { "test" :  "is_family", "subject" : "other", "value" :  "monster"},
                { "test" :  "is_family", "subject" : "other", "value" :  "d_class_melee"},
                { "test" :  "is_family", "subject" : "other", "value" :  "scp"}
              ]
            },
            "max_dist": 8,
            "sprint_speed_multiplier": 1.4
          }
        ]
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:behavior.melee_attack": {
        "priority": 2
      },
      "minecraft:behavior.random_stroll": {
        "priority": 7,
        "speed_multiplier": 0.8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 6
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.9
      },
      "minecraft:behavior.look_at_player": {
        "priority": 5,
        "look_distance": 3.0,
        "probability": 0.09
      },
      "minecraft:nameable": {
      },
      "minecraft:physics": {
      },
      "minecraft:conditional_bandwidth_optimization": {
      },
      "minecraft:navigation.walk": {
        "can_float": true,
		    "is_amphibious": false,
		    "can_path_over_water": true,
        "avoid_sun": false,
        "avoid_water": true,
        "avoid_damage_blocks": true,
        "can_pass_doors": false,
        "can_open_doors": false
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "randomize": [
              {
                "weight": 400,
                "add": {
                  "component_groups": [ "minecraft:base_nurse1" ]
                }
              },
              {
                "weight": 400,
                "add": {
                  "component_groups": [ "minecraft:base_nurse2" ]
                }
              },
              {
                "weight": 400,
                "add": {
                  "component_groups": [ "minecraft:base_nurse3" ]
                }
              }
            ]
          }
        ]
      },
      "become_zombie": {
        "sequence": [
          {
            "filters": {"test": "is_difficulty", "value": "normal"},
            "randomize": [
              {
                "weight": 140,
                "add": { "component_groups": [ "become_zombie" ] }
              },
              {
                "weight": 140
              }
            ]
          },
          {
            "filters": {"test": "is_difficulty", "value": "hard"},
            "add": {
              "component_groups": [
                "become_zombie"
              ]
            }
          }
        ]
      }
    }
  }
}
